{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "module": "commonjs",
    "target": "ES2019",
    "moduleResolution": "node",
    "emitDeclarationOnly": true,
    "declaration": true,
    "outDir": "temp_declarations"
  },
  "include": ["./library/**/*"],
  "exclude": ["node_modules"]
}
